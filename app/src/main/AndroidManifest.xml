<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.impeccthreads.cggamebook">

    <application
        android:name=".application.CGGameBookApp"
        android:allowBackup="true"
        android:icon="@drawable/joystick"
        android:label="@string/app_name"
        android:roundIcon="@drawable/joystick"
        android:supportsRtl="true"
        android:theme="@style/Theme.CGGameBook">
        <activity android:name=".activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.SettingsActivity"/>
        <activity android:name=".activity.CardGameActivity"/>
    </application>

</manifest>